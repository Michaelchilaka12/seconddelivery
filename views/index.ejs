    <title>Shipment Receipt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 15px;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        h1 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 5px;
        }
        /* img{
            width: 600px;
            
        } */

        .sub-title {
            text-align: center;
            font-size: 16px;
            font-style: italic;
            margin-bottom: 20px;
        }

        .header-section {
            display: block;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .header-section div {
            width: 48%;
        }

        .header-section p {
            margin: 5px 0;
        }

        .section-title {
            background-color: #f0f0f0;
            padding: 10px;
            font-weight: bold;
            margin-bottom: 5px;
            border: 1px solid #ccc;
        }

        .shipment-details {
            margin-bottom: 20px;
        }

        .shipment-details p {
            margin: 5px 0;
        }

        .shipment-details table {
            width: 100%;
            border-collapse: collapse;
        }

        .shipment-details table th, .shipment-details table td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }

        .shipment-details table th {
            background-color: #f0f0f0;
        }
        .sender{
           
            justify-content: left;
            padding: 10px;
            margin-right: 150px;
            
        }
        .receiver{
           
            padding: 10px;
            justify-content: right;
        }
        .me{
           
            display: flex;
            flex-direction: column;
         
           
            margin-top: 30px;
            margin-bottom: 20px;
            justify-content: space-between;
        }
        .time{
            display: inline;
            height: 20px;
        }
        #download-btn {
            /* width: 100px;
            height: 50px; */
            /* background-color: green; */
            color: black;
            margin-top: 30px;
            margin-left: 50px;
            font-size: larger;
            height: 50px;
        }
        #download-btn:hover{
            /* width: 100px;
            height: 50px; */
            /* background-color: green; */
            background-color: green;
            border-radius: 10px;
            height: 50px;
            color: white;
            
        }

        
